.col-md-12
  .col-md-10
    = link_to 'Back', :back
  .col-md-4
    %br
    %br    
    %p
      %strong Hotel name:
      = @hotel.title
    %p
      %strong Description:
      = @hotel.description
    %p
      %strong Price:
      = @hotel.price
    %p
      %strong Breakfast:
      = @hotel.breakfast
    %b Rating of this hotel
    %div{ id: 'rating', data: { score: @avg_rating } }
  %hr

  - if current_user
    .col-md-8
      .rating_score#star-rating
      = hidden_field_tag 'hotel_id', "#{@hotel.id}"
      = hidden_field_tag 'user_id', "#{current_user.id}"
      = button_to 'Vote', '#', method: 'get', id: 'b_rating', class: 'btn btn-info'

  .col-md-8

  .col-md-8
    = render 'comments/form'

  - if @hotel.comments.any?
    = render 'comments/comments'
